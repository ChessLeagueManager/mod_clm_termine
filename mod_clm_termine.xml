<extension type="module" version="1.7.0" client="site" method="upgrade">
	<name>CLM Modul Termine</name>
	<author>Fjodor Schaefer</author>
	<creationDate>08.02.2015</creationDate>
	<copyright>(C) 2011-2015 CLM Projekt  All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ich@vonfio.de</authorEmail>
	<authorUrl>www.chessleaguemanager.de</authorUrl>
	<version>1.2.4a</version>
	<description>
		<![CDATA[
			 <h3>Chess League Manager : Termin Modul</h3>
			 <p>Modul, welches die kommenden Termine anzeigt.</p>
			 <p><a target="_blank" href="http://www.chessleaguemanager.de">CLM Projekt Homepage</a></p>
			 <p>&copy; Fjodor Sch&auml;fer [<a target="_blank" href="http://www.vonfio.de">www.vonfio.de</a>]</p>
			 ]]>
		 </description>

	<files>
		<filename module="mod_clm_termine">mod_clm_termine.php</filename>
		<filename module="mod_clm_termine">mod_clm_termine.css</filename>
		<filename>changelog.txt</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl/</folder>
	</files>
	
	<config><fields name="params"><fieldset name="basic" label="basic">
		<field name="liste" type="list" default="1" label="Style">
			<option value="0">Liste</option>
			<option value="1">Kalenderansicht *Beta*</option>
		</field>
		<param type="spacer" />
		<field name="anzahl" type="text" default="5" label="Anzahl" />
		<field type="spacer" />
		<field name="datum" type="radio" default="1" label="Datum">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="datumlink" type="radio" default="0" label="Datum verlinken">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field type="spacer" />
		<field name="terminlink" type="radio" default="1" label="Ereignis verlinken">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="name" type="radio" default="1" label="Terminname">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="typ" type="radio" default="1" label="Liga / Turnier / Kategorie">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>
	<fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid">
                    <option
                        value="itemid"></option>
                </field>

   </fieldset>
	</fields></config>

</extension>
 